FROM debian:testing
MAINTAINER Till Junge <till.junge@epfl.ch>

RUN apt-get -qq update && apt-get -y -qq install libfftw3-dev libfftw3-mpi-dev libeigen3-dev libboost-test-dev python3-dev arcanist python3-numpy python3-scipy python3-breathe python3-sphinx doxygen python3-mpi4py g++ cmake && rm -rf /var/lib/apt/lists/*

# apt-get on one line due to https://docs.docker.com/develop/develop-images/dockerfile_best-practices/#run
